{% extends 'front/base.html.twig' %}

{% block body %}
    <section class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 pb-4">

                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <h1>Inscrivez-vous dès à présent</h1>

                <p>
                    Vous inscrire vous permettra de vous abonner aux spectacles et aux artistes qui vous intéressent.
                    Vous
                    pourrez ainsi accéder à un historique de votre navigation et, si vous le souhaitez, être notifié par
                    mail
                    de notre actualité en fonction de vos préférences
                </p>

                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.firstname, {
                    label: 'Prénom'
                }) }}
                {{ form_row(registrationForm.lastname, {
                    label: 'Nom'
                }) }}
                {{ form_row(registrationForm.agreeTerms, {
                    label: 'J\'accepte les termes de l\'inscription'
                }) }}
                {{ form_row(registrationForm.newsletter, {
                    label: 'J\'accepte d\'être notifié par mail des activités de la compagnie'
                }) }}

                <button type="submit" class="btn btn-primary">S'inscrire</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
{% endblock %}
